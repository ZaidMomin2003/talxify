
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isPublicPortfolio() {
        // This is a placeholder. In a real app, you might have a field like
        // resource.data.portfolio.isPublic == true
        return true; 
    }

    // Users can read their own data and public portfolio data.
    // They can only write to their own data.
    match /users/{userId} {
      allow read: if isOwner(userId) || isPublicPortfolio();
      allow write: if isOwner(userId);
    }
    
    // Survey submissions can be created by anyone, but not read, updated, or deleted.
    match /surveySubmissions/{submissionId} {
      allow read, update, delete: if false;
      allow create: if true;
    }

    // Waitlist submissions can be created by anyone, but not read, updated, or deleted.
    match /waitlist/{submissionId} {
      allow read, update, delete: if false;
      allow create: if true;
    }

    // Lock down all other collections by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
