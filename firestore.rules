
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default security: Deny all reads and writes to all documents.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read and write their own data.
    // This protects user-specific information like activity, portfolio, etc.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow ANYONE to create (submit) documents to the waitlist collection.
    // This is necessary for the public-facing waitlist page to function.
    match /waitlist/{docId} {
      allow create: if true;
    }

    // Allow ANYONE to create (submit) documents to the surveySubmissions collection.
    // This is necessary for the public-facing survey page to function.
    match /surveySubmissions/{docId} {
      allow create: if true;
      allow read, list: if request.auth != null; // Admins can read if needed
    }
  }
}
